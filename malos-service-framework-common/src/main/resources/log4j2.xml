<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Properties>
		<Property name="ConsoleName">Console${env:LOG_LAYOUT:-Test}</Property>
	</Properties>
	<Appenders>
		<Console name="ConsoleJson" target="SYSTEM_OUT">
			<JsonTemplateLayout eventTemplateUri="classpath:layout.json" />
		</Console>
		<Console name="FatalConsoleJson" target="SYSTEM_OUT">
			<JsonTemplateLayout
				eventTemplateUri="classpath:fatalLayout.json" />
		</Console>
		<Console name="ConsoleTest" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<Console name="FatalConsoleTest" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] FATAL %logger{36} - %msg%n" />
		</Console>
		<Routing name="Segment">
			<Routes pattern="$${marker:}">
				<Route key="FATAL" ref="Fatal${ConsoleName}" />
				<Route ref="${ConsoleName}" />
			</Routes>
		</Routing>
	</Appenders>

	<Loggers>
		<Logger name="com.maruzen" level="${env:LOG_LEVEL:-DEBUG}" additivity="false">
			<AppenderRef ref="Segment" />
		</Logger>
		<Logger name="org.hibernate.SQL" level="debug" additivity="false">
			<AppenderRef ref="Segment" />
		</Logger>
		<Logger name="org.hibernate.orm.jdbc.bind" level="trace" additivity="false">
			<AppenderRef ref="Segment" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="Segment" />
		</Root>
	</Loggers>
</Configuration>
